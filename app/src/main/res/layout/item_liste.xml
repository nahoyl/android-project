<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageImage"
        android:layout_width="50dp"
        android:layout_height="50dp"

        />

    <TextView
        android:id="@+id/nomImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageImage"
        android:layout_alignTop="@+id/imageImage"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/descriptionImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/nomImage"
        android:layout_below="@+id/nomImage"

        />

</RelativeLayout>